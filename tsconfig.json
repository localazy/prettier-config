{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "pretty": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "${configDir}/dist",
    "rootDir": "${configDir}",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["${configDir}/src", "${configDir}*.config.ts", "${configDir}*.config.cts", "${configDir}*.config.mts"],
  "exclude": ["${configDir}/node_modules", "${configDir}/dist", "${configDir}/coverage", "${configDir}/typedoc"]
}
